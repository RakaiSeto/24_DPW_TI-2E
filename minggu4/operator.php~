<?php
$a = 10;
$b = 5;

$hasilTambah = $a + $b;
$hasilKurat = $a - $b;
$hasilKali = $a * $b;
$hasilBagi = $a / $b;
$sisaBagi = $a % $b;
$pangkat = $a ** $b;

echo "Variabel a: {$a}<br>";
echo "Variabel b: {$b}<br>";
echo "Hasil dari $a + $b adalah $hasilTambah.<br>";
echo "Hasil dari $a - $b adalah $hasilKurat.<br>";
echo "Hasil dari $a * $b adalah $hasilKali.<br>";
echo "Hasil dari $a / $b adalah $hasilBagi.<br>";
echo "Hasil dari $a % $b adalah $sisaBagi.<br>";
echo "Hasil dari $a ** $b adalah $pangkat.<br>";
?>
